<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FriendsChat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/titles_color</item>
        <item name="colorPrimaryVariant">@color/background_img</item>
        <item name="colorOnPrimary">@color/background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/titles_color</item>
        <item name="colorSecondaryVariant">@color/background_img</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="customToolbarColorPrimary">@color/background_img</item>
        <item name="customToolbarColorSecondary">@color/text_color_Title</item>
        <item name="customToolbarColorThird">@color/background</item>

    </style>
    <style name="Theme.FriendsChat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">false</item>
    </style>
    <style name="Theme.FriendsChat.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >



    </style>


</resources>