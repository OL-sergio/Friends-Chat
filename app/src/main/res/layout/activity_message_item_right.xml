<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="9dp"
    android:layout_margin="5dp"
    tools:context=".ui.activity.MessageChatActivity">

    <RelativeLayout
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        tools:ignore="UselessParent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_message_item"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_user_account_blue"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView_show_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_image_circle_border"
            android:padding="8dp"
            android:text="@string/testing_purposes"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imageView_view_Image_message_item_right"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/testing_purposes"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView_isSeen_message_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_show_message"
            android:layout_alignParentEnd="true"
            android:visibility="gone" />

    </RelativeLayout>
</RelativeLayout>